@model IEnumerable<BPRCoronaFighter.Models.Lecture>
@{
    ViewBag.Title = "MyLecture";
}
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <script src="https://kit.fontawesome.com/a166556e40.js"></script>

    <link href="~/Content/group.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="jumbotron">
            <div class="container px-1 py-3">
                <div class="row">
                    <div class="col-md-3" id="profile">
                        <div class="card pl-3">
                            <div class="card-body">
                                <div class="mr-2">
                                    <img class="rounded-circle" width="50" src="assets/images/7.jpg" alt="">
                                </div>
                                <div class="h5 mt-4">@ViewBag.UserName </div>

                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("Create New Post", "CreatePost")
                                </li>
                                <li class="list-group-item">
                                    @Html.ActionLink("Create New Group", "CreateGroups")
                                </li>
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("View Lecture List", "Index", "Lecture")
                                </li>
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("Search Posts", "SearchPost", "Groups")
                                </li>
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("Go to group", "SearchGroup", "Groups")
                                </li>
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("Go to post", "SeePost", "Groups")
                                </li>
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("My post", "MyPost", "Groups")
                                </li>
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("Edit lecture", "EditLecture", "Lecture")
                                </li>
                                <li class="list-group-item mb-5">
                                    @Html.ActionLink("Delete lecture", "DeleteLecture", "Lecture")
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-9 gedf-main">
                        @foreach (var item in Model)
                        {
                            <table class="table" border="1">
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.LectureTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LectureTitle)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.LectureDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LectureDescription)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.LectureLink)
                                    </td>
                                    <td>
                                        <a href="@Html.DisplayFor(modelItem => item.LectureLink)">Zoom link</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.LectureDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LectureDate)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.LectureTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LectureTime)
                                    </td>
                                </tr>



                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>



    }
</body>
</html>
