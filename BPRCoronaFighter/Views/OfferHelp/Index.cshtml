
@{
    ViewBag.Title = "Help list";
}
@model IEnumerable<BPRCoronaFighter.Models.OfferHelp>

<html>
<head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <script src="https://kit.fontawesome.com/a166556e40.js"></script>
    <link href="~/Content/group.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">

</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="jumbotron">
            <b>Help List</b>
            <div class="container px-1 py-3">
                <div class="row">
                    <div class="col-md-3" id="profile">
                        <div class="card pl-3">
                            @*white area*@
                            <div class="card-body">
                                @*up area*@
                                <div class="input-group mb-5">
                                    @*one line*@
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary" type="button" id="button-addon2">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                    <input type="text" placeholder="Search" id="search" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
                                </div>
                                <div class="mr-2">
                                    <img class="rounded-circle" width="50" src="assets/images/7.jpg" alt="">
                                </div>
                                <div class="h5 mt-4">@ViewBag.UserName</div>
                                <div class="h6 text-muted mb-5">Patient</div>
                            </div>
                            <ul class="list-group list-group-flush">

                                <li class="list-group-item">
                                    <div class="h6 text-muted"><i class="fa fa-users mr-4"></i>Group joined</div>
                                </li>
                                <li class="list-group-item">
                                    <div class="h6 text-muted"><i class="fa fa-envelope mr-4"></i>Message<span class="badge badge-primary ml-5">5</span></div>
                                </li>   
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6 gedf-main">
                        <br>
                        <div class="card gedf-card">
                            <div class="card-body">

                            </div>
                            <div class="card-body">
                                @foreach (var item in Model)
                                {
                                    <table class="table" border="1">
                                        <tr>
                                            <td>
                                                @Html.DisplayNameFor(model => model.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.DisplayNameFor(model => model.HelpTitle)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HelpTitle)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.DisplayNameFor(model => model.HelpDescription)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HelpDescription)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.DisplayNameFor(model => model.HelpDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HelpDate)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.DisplayNameFor(model => model.HelpTime)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HelpTime)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.DisplayNameFor(model => model.FreeHour)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FreeHour)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.DisplayNameFor(model => model.Contact)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Contact)
                                            </td>
                                        </tr>
                                        


                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3" id="suggested">
                        <div class="card mb-5">
                            <div class="card-body">
                                <p class="card-text" id="popular">Popular</p>
                                <h6>Best Dressed this week</h6>
                                <p class="card-text">Overseas, Natalie Portman gave the mo dark florals some love, stepping out in a black Valentino.</p>
                                <p class="text-muted h7" style="font-size: 12px; margin-left: 140px;">30 Jan 2016</p>
                            </div>
                        </div>
                        <div class="card gedf-card">
                            <div class="card-body">
                                <h6 class="card-title mt-3 mb-5">Suggested people<span class="ml-5">:</span></h6>

                                <div class="d-flex mb-4">
                                    <div class="mr-1">
                                        <img class="rounded-circle" width="45" src="assets/images/2.jpg" alt="">
                                    </div>
                                    <div class="ml-1">
                                        <div class="h6 m-0 mt-1" style="font-size: 14px;">Susana Mendis</div>
                                        <div class="h7 text-muted" style="font-size: 12px;">Fashion Designer<span><i class="fa fa-plus-circle fa-2x" style="margin-left: 42px;"></i></span></div>
                                    </div>

                                </div>
                                <div class="d-flex mb-4">
                                    <div class="mr-1">
                                        <img class="rounded-circle" width="45" src="assets/images/3.jpg" alt="">
                                    </div>
                                    <div class="ml-1">
                                        <div class="h6 m-0 mt-1" style="font-size: 14px;">Neel Litoriya</div>
                                        <div class="h7 text-muted" style="font-size: 12px;">Cyber Punk<span><i class="fa fa-plus-circle fa-2x" style="margin-left: 72px;"></i></span></div>
                                    </div>
                                </div>
                                <div class="d-flex mb-4">
                                    <div class="mr-1">
                                        <img class="rounded-circle" width="45" src="assets/images/4.jpg" alt="">
                                    </div>
                                    <div class="ml-1">
                                        <div class="h6 m-0 mt-1" style="font-size: 14px;">Barbara Doe</div>
                                        <div class="h7 text-muted" style="font-size: 12px;">Photographer<span><i class="fa fa-plus-circle fa-2x" style="margin-left: 60px;"></i></span></div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</body>
</html>